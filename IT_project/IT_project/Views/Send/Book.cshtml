@model List<Books>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Книги</title>
    <link rel="stylesheet" href="~/css/main.css"/>
</head>
<body>

    <header>
        <div class="nav-menu">
            <a asp-controller="Home" asp-action="Index" class="nav-btn">Главная</a>
            <a asp-controller="Auth" asp-action="Login" class="nav-btn">Войти</a>
            <a asp-controller="Auth" asp-action="register" class="nav-btn">Регистрация</a>
        </div>
    </header>


    <main>
        <div class="category-grid">
        @foreach(Books book in Model)
        {
            
                <div class="card">
                    <p class="shrift">@book.Title</p>
                    <p class="shrift">@book.Author</p>
                </div>
        }
        </div>
        

    </main>

    <footer>
    </footer>
</body>
</html>
